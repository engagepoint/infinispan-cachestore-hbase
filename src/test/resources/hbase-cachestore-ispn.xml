<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-7.2.xsd
                          urn:infinispan:config:store:hbase:7.2 http://www.infinispan.org/schemas/infinispan-cachestore-hbase-config-7.2.xsd"
        xmlns="urn:infinispan:config:7.2"
        xmlns:hbase="urn:infinispan:config:7.2">

    <!-- Default cache named to preserve old default cache name -->
    <cache-container default-cache="default">
        <local-cache name="default">
            <transaction
                    mode="NON_XA"
                    transaction-manager-lookup="org.infinispan.transaction.lookup.GenericTransactionManagerLookup"
                    locking="PESSIMISTIC"/>
            <persistence passivation="false">
                <hbase-store xmlns="urn:infinispan:config:store:hbase:7.2"
                             auto-create-table="false"
                             entry-table="ISPNCacheStore"
                             entry-column-family="E"
                             entry-value-field="EV"
                             expiration-table="ISPNCacheStoreExpiration"
                             expiration-column-family="X"
                             expiration-value-field="XV"
                             shared-table="true"/>
            </persistence>
        </local-cache>
    </cache-container>
</infinispan>